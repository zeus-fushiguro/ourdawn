{{ 'section-testimonials-carousel-warmlyst.css' | asset_url | stylesheet_tag }}
<script src="{{ 'testimonials-carousel.js' | asset_url }}" defer="defer"></script>

<div class="testimonials-carousel color-{{ section.settings.color_scheme }}"
     data-section-id="{{ section.id }}"
     style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="page-width">

    {%- if section.settings.title != blank or section.settings.description != blank -%}
    <div class="testimonials-carousel__header">
      {%- if section.settings.badge_text != blank -%}
        {% render 'badge-seasonal',
          type: section.settings.badge_type,
          text: section.settings.badge_text
        %}
      {%- endif -%}

      {%- if section.settings.title != blank -%}
        <h2 class="testimonials-carousel__title {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <div class="testimonials-carousel__description rte">
          {{ section.settings.description }}
        </div>
      {%- endif -%}
    </div>
    {%- endif -%}

    <div class="testimonials-carousel__wrapper"
         data-testimonials-carousel
         data-autoplay="{{ section.settings.autoplay }}"
         data-autoplay-speed="{{ section.settings.autoplay_speed }}">

      <div class="testimonials-carousel__track" data-carousel-track>
        {%- for block in section.blocks -%}
          <div class="testimonial-card" data-carousel-slide {{ block.shopify_attributes }}>

            {%- comment -%} Rating {%- endcomment -%}
            <div class="testimonial-card__rating">
              {%- assign rating = block.settings.rating | default: 5 -%}
              {%- for i in (1..5) -%}
                <span class="star {% if i <= rating %}star--filled{% endif %}">★</span>
              {%- endfor -%}
            </div>

            {%- comment -%} Quote {%- endcomment -%}
            {%- if block.settings.quote != blank -%}
              <blockquote class="testimonial-card__quote">
                <p>{{ block.settings.quote }}</p>
              </blockquote>
            {%- endif -%}

            {%- comment -%} Author Info {%- endcomment -%}
            <div class="testimonial-card__author">
              {%- if block.settings.image != blank -%}
                <div class="testimonial-card__avatar">
                  <img
                    src="{{ block.settings.image | image_url: width: 200 }}"
                    alt="{{ block.settings.author | escape }}"
                    loading="lazy"
                    width="60"
                    height="60"
                  >
                  {%- if block.settings.verified -%}
                    <span class="testimonial-card__verified" title="Achat vérifié">✓</span>
                  {%- endif -%}
                </div>
              {%- else -%}
                <div class="testimonial-card__avatar testimonial-card__avatar--placeholder">
                  <span>{{ block.settings.author | slice: 0 }}</span>
                  {%- if block.settings.verified -%}
                    <span class="testimonial-card__verified" title="Achat vérifié">✓</span>
                  {%- endif -%}
                </div>
              {%- endif -%}

              <div class="testimonial-card__author-info">
                {%- if block.settings.author != blank -%}
                  <div class="testimonial-card__author-name">{{ block.settings.author }}</div>
                {%- endif -%}

                {%- if block.settings.location != blank -%}
                  <div class="testimonial-card__author-location">{{ block.settings.location }}</div>
                {%- endif -%}

                {%- if block.settings.date != blank -%}
                  <div class="testimonial-card__date">{{ block.settings.date }}</div>
                {%- endif -%}
              </div>
            </div>

            {%- comment -%} Product reference (if applicable) {%- endcomment -%}
            {%- if block.settings.product != blank -%}
              {%- assign product = all_products[block.settings.product] -%}
              {%- if product != blank -%}
                <div class="testimonial-card__product">
                  <a href="{{ product.url }}" class="testimonial-card__product-link">
                    {%- if product.featured_image -%}
                      <img
                        src="{{ product.featured_image | image_url: width: 100 }}"
                        alt="{{ product.title | escape }}"
                        loading="lazy"
                        width="40"
                        height="40"
                      >
                    {%- endif -%}
                    <span>{{ product.title }}</span>
                  </a>
                </div>
              {%- endif -%}
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>

      {%- if section.settings.show_navigation -%}
        <button type="button" class="testimonials-carousel__nav testimonials-carousel__nav--prev" data-carousel-prev aria-label="Précédent">
          {% render 'icon-cocooning', name: 'chevron-left', size: 24 %}
        </button>
        <button type="button" class="testimonials-carousel__nav testimonials-carousel__nav--next" data-carousel-next aria-label="Suivant">
          {% render 'icon-cocooning', name: 'chevron-right', size: 24 %}
        </button>
      {%- endif -%}

      {%- if section.settings.show_dots -%}
        <div class="testimonials-carousel__dots" data-carousel-dots></div>
      {%- endif -%}
    </div>

    {%- if section.settings.show_stats -%}
      <div class="testimonials-carousel__stats">
        <div class="testimonial-stat">
          <div class="testimonial-stat__value">{{ section.settings.stat_1_value }}</div>
          <div class="testimonial-stat__label">{{ section.settings.stat_1_label }}</div>
        </div>
        <div class="testimonial-stat">
          <div class="testimonial-stat__value">{{ section.settings.stat_2_value }}</div>
          <div class="testimonial-stat__label">{{ section.settings.stat_2_label }}</div>
        </div>
        <div class="testimonial-stat">
          <div class="testimonial-stat__value">{{ section.settings.stat_3_value }}</div>
          <div class="testimonial-stat__label">{{ section.settings.stat_3_label }}</div>
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

