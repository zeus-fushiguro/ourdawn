{{ 'kumo-styles.css' | asset_url | stylesheet_tag }}

<section class="kumo-py-6 kumo-px-4">
  <div class="kumo-container kumo-mx-auto">
    <div class="trust-bar kumo-flex kumo-flex-col kumo-md:flex-row kumo-items-center kumo-justify-center kumo-gap-4 kumo-md:gap-12 kumo-py-5 kumo-px-8">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'trust_item' %}
            <div class="kumo-flex kumo-items-center kumo-gap-3 kumo-text-muted-foreground" {{ block.shopify_attributes }}>
              {% case block.settings.icon %}
                {% when 'tiktok' %}
                  <span class="kumo-text-primary">
                    <svg class="kumo-w-5 kumo-h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                      <path d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                  </span>
                {% when 'truck' %}
                  <span class="kumo-text-primary">
                    <svg class="kumo-w-5 kumo-h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
                    </svg>
                  </span>
                {% when 'return' %}
                  <span class="kumo-text-primary">
                    <svg class="kumo-w-5 kumo-h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
                    </svg>
                  </span>
                {% when 'star' %}
                  <span class="kumo-text-primary">
                    <svg class="kumo-w-5 kumo-h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                    </svg>
                  </span>
                {% when 'shield' %}
                  <span class="kumo-text-primary">
                    <svg class="kumo-w-5 kumo-h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                    </svg>
                  </span>
                {% else %}
                  <span class="kumo-text-primary">
                    <svg class="kumo-w-5 kumo-h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </span>
              {% endcase %}
              <span class="kumo-text-sm kumo-font-medium">{{ block.settings.text }}</span>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "KUMO - Trust Bar",
  "tag": "section",
  "class": "kumo-section-trust-bar",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Couleur de fond",
      "default": "#F5F0EB"
    }
  ],
  "blocks": [
    {
      "type": "trust_item",
      "name": "Élément de confiance",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icône",
          "options": [
            { "value": "tiktok", "label": "TikTok / Vidéo" },
            { "value": "truck", "label": "Livraison" },
            { "value": "return", "label": "Retours" },
            { "value": "star", "label": "Étoile" },
            { "value": "shield", "label": "Bouclier" },
            { "value": "check", "label": "Check" }
          ],
          "default": "check"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Texte",
          "default": "Avantage client"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "KUMO - Trust Bar",
      "blocks": [
        {
          "type": "trust_item",
          "settings": {
            "icon": "tiktok",
            "text": "Vu sur TikTok"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "truck",
            "text": "Livraison Offerte dès 50€"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "return",
            "text": "Retours Simplifiés 30 Jours"
          }
        }
      ]
    }
  ]
}
{% endschema %}
