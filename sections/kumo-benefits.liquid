{{ 'kumo-styles.css' | asset_url | stylesheet_tag }}

<section id="story" class="kumo-py-20 kumo-px-4">
  <div class="kumo-container kumo-mx-auto">
    <!-- Section Header -->
    <div class="kumo-text-center kumo-mb-16">
      <h2 class="section-title text-fluffy">{{ section.settings.title }}</h2>
      {% if section.settings.description != blank %}
        <p class="kumo-mt-4 kumo-text-muted-foreground kumo-text-lg kumo-max-w-md kumo-mx-auto">
          {{ section.settings.description }}
        </p>
      {% endif %}
    </div>

    <!-- Benefits Grid -->
    <div class="kumo-grid kumo-grid-cols-1 kumo-md:grid-cols-3 kumo-gap-8 kumo-max-w-4xl kumo-mx-auto">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'benefit' %}
            <div class="kumo-text-center" {{ block.shopify_attributes }}>
              <!-- Icon Container -->
              <div class="kumo-inline-flex kumo-items-center kumo-justify-center kumo-w-20 kumo-h-20 kumo-rounded-3xl kumo-bg-secondary kumo-shadow-soft kumo-mb-6">
                {% case block.settings.icon %}
                  {% when 'cloud' %}
                    <svg class="kumo-w-9 kumo-h-9 kumo-text-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" />
                    </svg>
                  {% when 'heart' %}
                    <svg class="kumo-w-9 kumo-h-9 kumo-text-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                    </svg>
                  {% when 'flame' %}
                    <svg class="kumo-w-9 kumo-h-9 kumo-text-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0112 21 8.25 8.25 0 016.038 7.048 8.287 8.287 0 009 9.6a8.983 8.983 0 013.361-6.867 8.21 8.21 0 003 2.48z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 00.495-7.467 5.99 5.99 0 00-1.925 3.546 5.974 5.974 0 01-2.133-1A3.75 3.75 0 0012 18z" />
                    </svg>
                  {% when 'sparkles' %}
                    <svg class="kumo-w-9 kumo-h-9 kumo-text-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
                    </svg>
                  {% when 'shield' %}
                    <svg class="kumo-w-9 kumo-h-9 kumo-text-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                    </svg>
                  {% when 'leaf' %}
                    <svg class="kumo-w-9 kumo-h-9 kumo-text-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 3.75c-2.25 0-4.5 1.5-4.5 5.25 0 2.25.75 4.5 2.25 6.75M12 3.75c2.25 0 4.5 1.5 4.5 5.25 0 2.25-.75 4.5-2.25 6.75M12 3.75v12M7.5 21h9M12 15.75c0 2.25-1.5 4.5-3 5.25m3-5.25c0 2.25 1.5 4.5 3 5.25" />
                    </svg>
                  {% else %}
                    <svg class="kumo-w-9 kumo-h-9 kumo-text-primary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                {% endcase %}
              </div>

              <!-- Content -->
              <h3 class="kumo-font-bold kumo-text-foreground kumo-text-xl kumo-mb-1">
                {{ block.settings.title }}
              </h3>
              {% if block.settings.subtitle != blank %}
                <span class="kumo-inline-block kumo-px-3 kumo-py-1 kumo-bg-accent kumo-rounded-full kumo-text-xs kumo-font-medium kumo-text-muted-foreground kumo-mb-3">
                  {{ block.settings.subtitle }}
                </span>
              {% endif %}
              <p class="kumo-text-muted-foreground kumo-text-sm kumo-leading-relaxed">
                {{ block.settings.description }}
              </p>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "KUMO - Avantages",
  "tag": "section",
  "class": "kumo-section-benefits",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Pourquoi KUMO ?"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Chaque détail est pensé pour votre confort absolu."
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Avantage",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icône",
          "options": [
            { "value": "cloud", "label": "Nuage" },
            { "value": "heart", "label": "Coeur" },
            { "value": "flame", "label": "Flamme" },
            { "value": "sparkles", "label": "Étoiles" },
            { "value": "shield", "label": "Bouclier" },
            { "value": "leaf", "label": "Feuille" },
            { "value": "check", "label": "Check" }
          ],
          "default": "cloud"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titre",
          "default": "Avantage produit"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Sous-titre (badge)",
          "default": "100% Qualité"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Description de l'avantage pour vos clients."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "KUMO - Avantages",
      "blocks": [
        {
          "type": "benefit",
          "settings": {
            "icon": "cloud",
            "title": "Semelle Cloud-Foam™",
            "subtitle": "3cm d'épaisseur",
            "description": "Comme marcher sur un nuage, littéralement."
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon": "heart",
            "title": "Sherpa Ultra-Doux",
            "subtitle": "100% Vegan",
            "description": "Une caresse à chaque instant sur votre peau."
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon": "flame",
            "title": "Chaleur Instantanée",
            "subtitle": "Isolation thermique",
            "description": "Dites adieu aux pieds froids pour toujours."
          }
        }
      ]
    }
  ]
}
{% endschema %}
