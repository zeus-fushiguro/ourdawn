/* KUMO Shared Styles */
@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500;600;700&display=swap');

/* CSS Reset */
*, ::before, ::after {
  box-sizing: border-box;
  border-width: 0;
  border-style: solid;
  border-color: #e5e7eb;
}

html {
  line-height: 1.5;
  -webkit-text-size-adjust: 100%;
  -moz-tab-size: 4;
  tab-size: 4;
  font-family: ui-sans-serif, system-ui, sans-serif;
  scroll-behavior: smooth;
}

body {
  margin: 0;
  line-height: inherit;
  font-family: 'Quicksand', sans-serif;
  background-color: hsl(35, 45%, 97%);
  color: hsl(25, 35%, 28%);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-image:
    radial-gradient(ellipse at 20% 0%, hsla(35, 50%, 92%, 0.8) 0%, transparent 50%),
    radial-gradient(ellipse at 80% 100%, hsla(30, 40%, 90%, 0.6) 0%, transparent 50%);
  background-attachment: fixed;
}

/* CSS Variables */
:root {
  --background: 35 45% 97%;
  --foreground: 25 35% 28%;
  --card: 38 50% 96%;
  --primary: 25 30% 52%;
  --primary-foreground: 38 60% 97%;
  --secondary: 35 30% 90%;
  --secondary-foreground: 25 35% 28%;
  --muted-foreground: 25 20% 50%;
  --accent: 30 35% 88%;
  --border: 35 20% 88%;
  --shadow-soft: 0 8px 32px -8px hsla(25, 30%, 40%, 0.12);
  --shadow-float: 0 16px 48px -12px hsla(25, 30%, 40%, 0.18);
  --shadow-glow: 0 4px 24px -4px hsla(35, 40%, 70%, 0.4);
  --radius: 1.5rem;
}

/* Typography Reset */
h1, h2, h3, h4, h5, h6 {
  font-size: inherit;
  font-weight: inherit;
  margin: 0;
}

p { margin: 0; }

a {
  color: inherit;
  text-decoration: inherit;
}

button {
  font-family: inherit;
  font-size: 100%;
  font-weight: inherit;
  line-height: inherit;
  color: inherit;
  margin: 0;
  padding: 0;
  background-color: transparent;
  border: none;
  cursor: pointer;
}

img {
  display: block;
  max-width: 100%;
  height: auto;
}

/* Container */
.kumo-container {
  width: 100%;
  margin-right: auto;
  margin-left: auto;
  padding-right: 1.5rem;
  padding-left: 1.5rem;
}

@media (min-width: 1200px) {
  .kumo-container { max-width: 1200px; }
}

/* Components */
.card-float {
  border-radius: 2rem;
  background-color: hsl(var(--card));
  box-shadow: var(--shadow-float);
  transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1), box-shadow 0.4s ease;
}

.card-float:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-glow), var(--shadow-float);
}

.btn-cozy {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  border-radius: 9999px;
  background-color: hsl(var(--primary));
  padding: 1rem 2rem;
  font-size: 1.125rem;
  line-height: 1.75rem;
  font-weight: 600;
  color: hsl(var(--primary-foreground));
  transition: all 0.3s ease;
  box-shadow: var(--shadow-soft);
}

.btn-cozy:hover {
  transform: translateY(-2px) scale(1.02);
  box-shadow: var(--shadow-float);
}

.btn-cozy:active {
  transform: translateY(0) scale(0.98);
}

.trust-bar {
  border-radius: 9999px;
  background-color: hsl(var(--secondary) / 0.6);
  backdrop-filter: blur(4px);
}

.section-title {
  font-size: 1.875rem;
  line-height: 2.25rem;
  font-weight: 700;
  letter-spacing: -0.025em;
  color: hsl(var(--foreground));
}

@media (min-width: 768px) {
  .section-title {
    font-size: 2.25rem;
    line-height: 2.5rem;
  }
}

.text-fluffy {
  text-shadow: 0 4px 8px hsla(25, 30%, 40%, 0.1);
}

.gradient-cozy {
  background: linear-gradient(135deg,
    hsla(35, 50%, 90%, 0.4) 0%,
    hsla(30, 45%, 88%, 0.3) 50%,
    hsla(25, 40%, 85%, 0.4) 100%);
}

/* Product Card Button */
.kumo-add-to-cart-btn {
  width: 100%;
  margin-top: 1rem;
  padding: 0.75rem 1rem;
  background-color: hsl(var(--secondary));
  color: hsl(var(--secondary-foreground));
  font-weight: 500;
  border-radius: 9999px;
  transition: background-color 0.15s, transform 0.15s;
  border: none;
  cursor: pointer;
}

.kumo-add-to-cart-btn:hover {
  background-color: hsl(var(--accent));
  transform: translateY(-1px);
}

.kumo-add-to-cart-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.kumo-compare-price {
  text-decoration: line-through;
  opacity: 0.6;
  font-size: 0.875rem;
  margin-left: 0.5rem;
}

.kumo-sale-badge {
  position: absolute;
  top: 0.75rem;
  right: 0.75rem;
  background-color: hsl(var(--primary));
  color: hsl(var(--primary-foreground));
  padding: 0.25rem 0.75rem;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 600;
}

.kumo-soldout-badge {
  position: absolute;
  top: 0.75rem;
  right: 0.75rem;
  background-color: hsl(var(--muted-foreground));
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 600;
}

