{%- comment -%}
  Countdown Timer WARMLYST
  Creates urgency with countdown to deadline

  Usage:
  {% render 'countdown-timer-warmlyst',
    end_date: '2026-12-31 23:59:59',
    title: 'Offre limit√©e',
    style: 'default'
  %}

  Parameters:
  - end_date: 'YYYY-MM-DD HH:MM:SS' (required)
  - title: String (optional)
  - style: 'default' | 'compact' | 'minimal' (default: 'default')
  - show_labels: true | false (default: true)
{%- endcomment -%}

{%- liquid
  assign timer_id = 'timer-' | append: end_date | md5
  assign style = style | default: 'default'
  assign show_labels = show_labels | default: true
-%}

<style>
  .countdown-timer {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
  }

  .countdown-timer__title {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-charcoal);
    margin-right: 0.5rem;
  }

  .countdown-timer__units {
    display: flex;
    gap: 0.75rem;
  }

  .countdown-timer--compact .countdown-timer__units {
    gap: 0.5rem;
  }

  .countdown-unit {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 60px;
  }

  .countdown-timer--compact .countdown-unit {
    min-width: 48px;
  }

  .countdown-timer--minimal .countdown-unit {
    min-width: auto;
    flex-direction: row;
    gap: 0.25rem;
  }

  .countdown-unit__value {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
    color: var(--color-cocooning-orange);
    font-family: var(--font-heading);
    padding: 0.75rem 1rem;
    background: linear-gradient(135deg, var(--color-warm-beige-light), var(--color-cream));
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .countdown-timer--compact .countdown-unit__value {
    font-size: 1.5rem;
    padding: 0.5rem 0.75rem;
  }

  .countdown-timer--minimal .countdown-unit__value {
    font-size: 1.25rem;
    padding: 0.375rem 0.625rem;
    background: none;
    box-shadow: none;
  }

  .countdown-unit__label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #6b7280;
    margin-top: 0.5rem;
    font-weight: 600;
  }

  .countdown-timer--compact .countdown-unit__label {
    font-size: 0.6875rem;
    margin-top: 0.375rem;
  }

  .countdown-timer--minimal .countdown-unit__label {
    margin-top: 0;
    font-size: 0.8125rem;
  }

  .countdown-unit__separator {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-cocooning-orange);
    line-height: 1;
    align-self: center;
  }

  .countdown-timer--compact .countdown-unit__separator {
    font-size: 1.5rem;
  }

  .countdown-timer--minimal .countdown-unit__separator {
    font-size: 1.25rem;
  }

  .countdown-timer--expired {
    opacity: 0.5;
  }

  @media (max-width: 589px) {
    .countdown-timer {
      flex-wrap: wrap;
      justify-content: center;
    }

    .countdown-unit {
      min-width: 50px;
    }

    .countdown-unit__value {
      font-size: 1.5rem;
      padding: 0.5rem 0.75rem;
    }

    .countdown-unit__label {
      font-size: 0.6875rem;
    }
  }

  /* Pulse animation for urgency */
  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 2px 8px rgba(217, 117, 66, 0.2);
    }
    50% {
      box-shadow: 0 4px 16px rgba(217, 117, 66, 0.4);
    }
  }

  .countdown-timer--default .countdown-unit__value {
    animation: pulse-glow 2s infinite;
  }
</style>

<div class="countdown-timer countdown-timer--{{ style }}"
     id="{{ timer_id }}"
     data-countdown-timer
     data-end-date="{{ end_date }}">

  {%- if title != blank -%}
    <div class="countdown-timer__title">{{ title }}</div>
  {%- endif -%}

  <div class="countdown-timer__units" data-countdown-display>
    <div class="countdown-unit">
      <span class="countdown-unit__value" data-countdown-days>00</span>
      {%- if show_labels -%}
        <span class="countdown-unit__label">Jours</span>
      {%- endif -%}
    </div>

    <span class="countdown-unit__separator">:</span>

    <div class="countdown-unit">
      <span class="countdown-unit__value" data-countdown-hours>00</span>
      {%- if show_labels -%}
        <span class="countdown-unit__label">Heures</span>
      {%- endif -%}
    </div>

    <span class="countdown-unit__separator">:</span>

    <div class="countdown-unit">
      <span class="countdown-unit__value" data-countdown-minutes>00</span>
      {%- if show_labels -%}
        <span class="countdown-unit__label">Minutes</span>
      {%- endif -%}
    </div>

    <span class="countdown-unit__separator">:</span>

    <div class="countdown-unit">
      <span class="countdown-unit__value" data-countdown-seconds>00</span>
      {%- if show_labels -%}
        <span class="countdown-unit__label">Secondes</span>
      {%- endif -%}
    </div>
  </div>
</div>

<script>
(function() {
  const timer = document.getElementById('{{ timer_id }}');
  if (!timer) return;

  const endDate = new Date('{{ end_date }}').getTime();
  const daysEl = timer.querySelector('[data-countdown-days]');
  const hoursEl = timer.querySelector('[data-countdown-hours]');
  const minutesEl = timer.querySelector('[data-countdown-minutes]');
  const secondsEl = timer.querySelector('[data-countdown-seconds]');

  function updateTimer() {
    const now = new Date().getTime();
    const distance = endDate - now;

    if (distance < 0) {
      timer.classList.add('countdown-timer--expired');
      daysEl.textContent = '00';
      hoursEl.textContent = '00';
      minutesEl.textContent = '00';
      secondsEl.textContent = '00';
      clearInterval(interval);
      return;
    }

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    daysEl.textContent = String(days).padStart(2, '0');
    hoursEl.textContent = String(hours).padStart(2, '0');
    minutesEl.textContent = String(minutes).padStart(2, '0');
    secondsEl.textContent = String(seconds).padStart(2, '0');
  }

  // Initial update
  updateTimer();

  // Update every second
  const interval = setInterval(updateTimer, 1000);
})();
</script>
